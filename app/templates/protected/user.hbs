{{partial "components/header"}}

<div class="content-wrap">
  <div class="row bg-white pb20">
    <div class="col-md-12">
      <div class="col-xs-4">
        <div class="pt20 text-center">
          <img id="user-pic" class="img-polaroid img-circle user-pic border-all" {{bind-attr src=model.avatar.url}} width="80%">
          <div class="break-word">{{model.username}}</div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="pt20 text-center">
          <div class="fs-sm">
            可用金额 (元)
          </div>
          <div class="red mb20">
            1000.00
          </div>
          {{#link-to "" class="btn-u btn-u-sm btn-u-red w-all"}}
            充值
          {{/link-to}}
        </div>
      </div>
      <div class="col-xs-4">
        <div class="pt20 text-center">
          <div class="fs-sm">
            冻结金额 (元)
          </div>
          <div class="red mb20">
            1000.00
          </div>
          {{#link-to "" class="btn-u btn-u-sm btn-u-red w-all"}}
            提现
          {{/link-to}}
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <ul class="nav-ver-list w-all">
      <li class="nav-ver-item">
        {{#link-to 'protected.billing' class="color-inherit"}}
          <div class="fs18">
            <span class="text-center w30 inline-block">
              <i class="fa fa-bars"></i>
            </span>
            <span class="ml10">交易记录</span>
            <i class="fa fa-chevron-right pull-right mt5"></i>
          </div>
        {{/link-to}}
      </li>
      <li class="nav-ver-item">
        <div class="fs18">
          <span class="text-center w30 inline-block">
            <i class="fa fa-bar-chart-o"></i>
          </span>
          <span class="ml10">投资记录</span>
          <i class="fa fa-chevron-right pull-right mt5"></i>
        </div>
      </li>
      <li class="nav-ver-item">
        <div class="fs18">
          <span class="text-center w30 inline-block">
            <i class="fa fa-credit-card"></i>
          </span>
          <span class="ml10">银行卡管理</span>
          <i class="fa fa-chevron-right pull-right mt5"></i>
        </div>
      </li>
      <li class="nav-ver-item">
        {{#link-to 'protected.safe_setting' class="color-inherit"}}
          <div class="fs18">
            <span class="text-center w30 inline-block">
              <i class="fa fa-lock"></i>
            </span>
            <span class="ml10">安全设置</span>
            <i class="fa fa-chevron-right pull-right mt5"></i>
          </div>
        {{/link-to}}
      </li>
      <li class="nav-ver-item">
        <div class="fs18">
          <span class="text-center w30 inline-block">
            <i class="fa fa-wechat"></i>
          </span>
          <span class="ml10">关注微信</span>
          <i class="fa fa-chevron-right pull-right mt5"></i>
        </div>
      </li>
      <li class="nav-ver-item">
        <div class="fs18">
          <span class="text-center w30 inline-block">
            <i class="fa icon-logo"></i>
          </span>
          <span class="ml10">关于摩尔街</span>
          <i class="fa fa-chevron-right pull-right mt5"></i>
        </div>
      </li>
    </ul>
  </div>
</div>
