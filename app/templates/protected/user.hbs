{{partial "components/header"}}

<div class="content-wrap">
  <div class="row">
    <div class="col-md-12">
      <div class="col-xs-4">
        <div class="pt20 text-center">
          <img id="user-pic" class="img-polaroid img-circle user-pic border-all" {{bind-attr src=model.avatar.url}} width="80%">
          <div class="break-word">{{model.username}}</div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="pt20 text-center">
          <div class="fs-sm">
            可用金额 (元)
          </div>
          <div class="red mb20">
            1000.00
          </div>
          {{#link-to "" class="btn-u btn-u-sm btn-u-red w-all"}}
            充值
          {{/link-to}}
        </div>
      </div>
      <div class="col-xs-4">
        <div class="pt20 text-center">
          <div class="fs-sm">
            冻结金额 (元)
          </div>
          <div class="red mb20">
            1000.00
          </div>
          {{#link-to "" class="btn-u btn-u-sm btn-u-red w-all"}}
            提现
          {{/link-to}}
        </div>
      </div>
    </div>
  </div>
</div>
