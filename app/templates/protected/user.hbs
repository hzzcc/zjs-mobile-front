{{zz-header toolbar_back_show=false toolbar_name="个人中心" toolbar_logout=true}}

<div class="content-wrap">
  <div class="row bg-red pb20">
    <div class="col-md-12">
      <div class="col-xs-4">
        <div class="pt20 text-center">
          <img id="user-pic" class="img-polaroid img-circle user-pic border-all" {{bind-attr src=model.avatar.url}} width="80%">
          <div class="break-word mt5 white">{{model.username}}</div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="pt20 text-center">
          <div class="fs-sm white">
            可用金额 (元)
          </div>
          <div class="white mb15 fs14 mt5">
            {{model.balance}}
          </div>
          {{#link-to "protected.cashin" class="btn-u btn-u-sm rounded btn-u-red w-all charge-btn"}}
            充值
          {{/link-to}}
        </div>
      </div>
      <div class="col-xs-4">
        <div class="pt20 text-center">
          <div class="fs-sm white">
            冻结金额 (元)
          </div>
          <div class="white mb15 fs14 mt5">
            {{model.frost}}
          </div>
          {{#link-to "protected.cashout" class="btn-u btn-u-sm rounded btn-u-red w-all charge-btn"}}
            提现
          {{/link-to}}
        </div>
      </div>
    </div>
  </div>
  <div class="row">

    <div class="profile-tab">
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
          {{#link-to 'protected.user.billing'}}
            充值记录
          {{/link-to}}
        </li>
        <li role="presentation">
          {{#link-to 'protected.user.order'}}
            交易记录
          {{/link-to}}
        </li>
        <li role="presentation">
          {{#link-to 'protected.user.safe-setting'}}
            安全设置
          {{/link-to}}
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="billings">
          {{outlet}}
        </div>
        <div role="tabpanel" class="tab-pane" id="orders">
          {{outlet}}
        </div>
        <div role="tabpanel" class="tab-pane" id="settings">
          {{outlet}}
        </div>
      </div>
    </div>

  </div>
</div>
{{zz-footer nav_item_1=false nav_item_2=false nav_item_3=true}}
