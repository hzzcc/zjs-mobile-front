{{zz-header toolbar_back_show=true toolbar_name="充值" toolbar_back_url="protected.user.billing"}}

<div class="content-wrap">
  <div class="row ">
    <div class="col-md-12 mt20">
      账户余额：<span class="red">{{user.balance}}</span> 元
    </div>
    <form {{action 'cashin' this on='submit'}}  method="post" class="mt20" id="cashin_form">
      <div class="alert alert-danger {{unless hasError 'hidden'}}">
        <i class="fa fa-warning"></i>
        <span>{{this.errorMsg}}</span>
      </div>
      <div class="input-group mb10">
        <span class="input-group-addon">
          <i class="icon-lock"></i>
        </span>
        {{input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="请输入充值金额" value=model.amount }}
      </div>
      <div class="col-md-12 fs-sm">
        温馨提示：资金由xxxxxx托管
      </div>
      <div class="row mt20">
        <div class="col-md-12 text-center">
          <button id="submit-btn" class="btn-u btn-u-red col-sm-6 w150" type="submit">确认</button>
        </div>
      </div>

    </form>

    <div class="text logo-des">
      <p>
        <span>版权所有 证津信息科技（上海）有限公司 </span>
      </p>
      <p>
        <span>Copyright Reserved 2015-2017 沪ICP备15010975号</span>
      </p>
    </div>
  </div>
</div>
