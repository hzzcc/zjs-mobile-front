{{partial "components/header"}}
<div class="content-wrap">
  <div id="register">
					<div class="text-center mt30">
						<img src="images/logo.png" width="150" />
					</div>
					<div class="text-center mt10">
						<img src="images/nav_kouhao.png" width="220" />
					</div>
					<div class="register-form p30 pb20">
            <form {{action 'register' this on='submit'}}  method="post">

              <div {{bind-attr class=":alert :alert-danger hasError::hidden"}}>
            		<i class="fa fa-warning"></i>
            		<span>{{this.errorMsg}}</span>
        			</div>

  						<div class='input-group margin-bottom-20'>
  							<span class='input-group-addon'>

  								<i class='fa fa-user'></i>

  							</span>
                {{input class="form-control placeholder-no-fix" type="text" autocomplete="off" autofocus="autofocus" placeholder="昵称" value=model.username}}
  						</div>
  						<div class='input-group margin-bottom-20'>
  							<span class='input-group-addon'>

  								<i class='fa fa-mobile'></i>

  							</span>
                {{input id="user_cell" class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="手机号" value=model.cell}}
  						</div>
  						<div class='input-group margin-bottom-20'>
  							<span class='input-group-addon'>

  								<i class='fa fa-lock'></i>

  							</span>
                {{input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="密码" value=model.password id="password"}}
  						</div>

  						<div class='input-group margin-bottom-20'>
  							<span class='input-group-addon'>

  								<i class='fa fa-lock'></i>

  							</span>
                {{input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="确认密码" value=model.passwordConfirmation}}
  						</div>
  						<div class='row'>
  							<div class='col-xs-6'>
  								<div class='input-group margin-bottom-20'>
  									<span class='input-group-addon'>

  										<i class='fa fa-key'></i>

  									</span>
                    {{input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="验证码" value=model.verification_code}}
                  </div>
  							</div>
  							<div class='col-xs-6'>
  								<a class='btn-u btn-u-red' id='getCheckCode' {{action 'getCheckCode'}}>获取验证码</a>
  							</div>
  						</div>
              <div class='row'>
  							<div class='col-lg-6 checkbox'>
  								<label>
                    {{input id="agreeBtn" type='checkbox' checked=model.agreed}}  已阅读
  									<a class='red sign-item' href='javascript:;'>条款</a>
  								</label>
  							</div>
  							<div class='col-lg-12'>
  								<button class='btn-u btn-u-red col-sm-12 w-all margin-top-20' id="submit-btn" name='commit' type='submit' value='Sign up'>注册</button>
  							</div>
  							<div class='mt20 text-center'>
  								已经注册？
                  {{#link-to "profile.login" class="red"}}
  									<span>

  									立即登录

  									<i class="fa fa-angle-double-right"></i>

                    </span>
  							  {{/link-to}}
  							</div>
  							<div class="col-md-12 text-center fs-sm pt20">
  								<div>© 摩尔街 molstr.com 沪ICP备15010975号</div>
  								<a href="http://www.molstr.com">pc版</a> 400-108-8182
  							</div>
  						</div>
            </form>
          </div>
		</div>
</div>
